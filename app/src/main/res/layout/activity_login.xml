<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TWINS"
            android:textSize="50sp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/holo_red_dark"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@null"
            android:src="@drawable/lgtwinsthth"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            />


        <EditText
            android:id="@+id/emailtext"
            android:layout_width="match_parent"
            android:hint="E-mail"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/passwordtext"
            android:layout_width="match_parent"
            android:hint="Password"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            />

        <RelativeLayout
            android:id="@+id/loginbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btn_black"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"

            android:weightSum="1"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/textview_login1"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:stateListAnimator="@null"
                android:text="LOGIN"
                android:textColor="#ffffff"
                android:textSize="25dp"
                android:layout_centerInParent="true"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:src="@drawable/lg_logo"
                android:layout_toLeftOf="@id/textview_login1"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="OR"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            />

        <RelativeLayout
            android:id="@+id/facebookbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/btn_yellow"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:clickable="true"
            android:weightSum="1"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textview_login2"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:textColor="#ff0000"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:stateListAnimator="@null"
                android:gravity="center"
                android:text="FACEBOOK"
                android:textSize="25dp"
                android:layout_centerInParent="true"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:src="@drawable/lg_logo"
                android:layout_toLeftOf="@id/textview_login2"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Find Password"
                android:textSize="20sp"
                android:layout_weight="5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sign Up"
                android:textSize="20sp"
                android:layout_weight="5"
                android:textColor="@android:color/holo_blue_dark"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>